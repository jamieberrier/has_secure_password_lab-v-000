<h1>Sign Up Form</h1>
<%= form_for current_user do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br>

  <%= f.label :password %>:
  <%= f.password_field :password %><br>

  <label>Confirm Password:</label><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit %>
<% end %>
